{
  "name": "drawfolderstructure",
  "displayName": "Draw Folder Structure",
  "description": "Generate markdown representations of your folder and file structure",
  "version": "1.4.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/krivoox/draw-folder-structure"
  },
  "icon": "src/assets/drawstructurelogo.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "publisher": "jmkrivocapich",
  "author": {
    "name": "JKrivoox"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateMarkdownStructure",
        "title": "Generate Markdown structure"
      },
      {
        "command": "extension.generateMarkdownStructureRespectGitignore",
        "title": "Generate Markdown structure (respectGitignore)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.generateMarkdownStructure",
          "when": "resourceScheme == file"
        },
        {
          "command": "extension.generateMarkdownStructureRespectGitignore",
          "when": "resourceScheme == file"
        }
      ]
    },
    "configuration": {
      "title": "Draw Folder Structure",
      "properties": {
        "draw.folder.structure.exclude": {
          "type": "array",
          "default": [
            "**/node_modules",
            "**/*.git",
            "**/dist",
            "**/*.next",
            "**/out"
          ],
          "description": "File and folder patterns to exclude when generating the Markdown structure."
        },
        "draw.folder.structure.style": {
          "type": "string",
          "default": "EmojiDashes",
          "enum": [
            "ClassicDashes",
            "SparklesDesing",
            "TrailDesign",
            "FloralDesign",
            "GalacticDesign",
            "MinimalistDots",
            "EmojiDashes",
            "EmojiFun",
            "EmojiMinimalist",
            "Arrows",
            "NestedCircles",
            "BoldBlocks",
            "SlashSeparators",
            "ChevronIndicators",
            "DotDashMix",
            "Triangles",
            "Zigzag",
            "PipesAndHyphens",
            "NestedSquares",
            "CirclesAndLines",
            "DocumentedTree"
          ],
          "description": "Drawing style for folder structure."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "ignore": "^6.0.2"
  }
}
